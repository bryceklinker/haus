@model Haus.Identity.Core.Accounts.Entities.LoginViewModel
@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"

<!DOCTYPE html>

<html lang="en">
<head>
    <title>Login : Haus Identity</title>
</head>
<body>
<div>
    <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@Model.ReturnUrl" method="post">
        <div>
            <label asp-for="Username">Username</label>
            <input asp-for="Username" data-testid="username-input" value="@Model.Username"/>
        </div>
        <div>
            <label asp-for="Password">Password</label>
            <input asp-for="Password" data-testid="password-input" type="password"/>
        </div>
        <div>
            <button type="submit" data-testid="login-button">Login</button>
        </div>
    </form>
</div>
</body>
</html>